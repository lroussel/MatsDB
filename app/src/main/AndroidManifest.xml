<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.matsdb.loicr.moviedb">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_moviedb"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_moviedb"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <activity android:name="com.matsdb.loicr.moviedb.ui.activity.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.matsdb.loicr.moviedb.ui.activity.SearchActivity" />
        <activity
            android:name="com.matsdb.loicr.moviedb.ui.activity.MovieActivity"
            android:label="@string/title_activity_movie"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.matsdb.loicr.moviedb.ui.activity.CreditMovieActivity"
            android:label="@string/title_activity_credit_movie"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.matsdb.loicr.moviedb.ui.activity.CreditTVActivity"
            android:label="@string/title_activity_credit_tv"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.matsdb.loicr.moviedb.ui.activity.CompanyMovieActivity"
            android:label="@string/title_activity_company_movie"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name="com.matsdb.loicr.moviedb.ui.activity.ReviewsMovieActivity" />
        <activity android:name="com.matsdb.loicr.moviedb.ui.activity.VideosActivity" />
        <activity android:name="com.matsdb.loicr.moviedb.ui.activity.RecomMovieActivity" />
        <activity android:name="com.matsdb.loicr.moviedb.ui.activity.SimilarMovieActivity" />
        <activity android:name="com.matsdb.loicr.moviedb.ui.activity.UpcommingMovieActivity" />
        <activity android:name="com.matsdb.loicr.moviedb.ui.activity.OntheairTVActivity" />
        <activity android:name="com.matsdb.loicr.moviedb.ui.activity.TopRatedMovieActivity" />
        <activity android:name="com.matsdb.loicr.moviedb.ui.activity.TopRatedTVActivity" />
        <activity android:name="com.matsdb.loicr.moviedb.ui.activity.PopularMovieActivity" />
        <activity android:name="com.matsdb.loicr.moviedb.ui.activity.PopularTVActivity" />
        <activity android:name="com.matsdb.loicr.moviedb.ui.activity.PopularPersonActivity" />
        <activity android:name="com.matsdb.loicr.moviedb.ui.activity.PeopleActivity" />
        <activity
            android:name="com.matsdb.loicr.moviedb.ui.activity.PeopleCreditsActivity"
            android:label="@string/title_activity_people_credits"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name="com.matsdb.loicr.moviedb.ui.activity.ImageViewActivity" />
        <activity
            android:name="com.matsdb.loicr.moviedb.ui.activity.TVActivity"
            android:label="@string/title_activity_tv"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name="com.matsdb.loicr.moviedb.ui.activity.SeasonsActivity" />
        <activity android:name="com.matsdb.loicr.moviedb.ui.activity.EpisodesActivity" />
        <activity
            android:name="com.matsdb.loicr.moviedb.ui.activity.EpisodeActivity"
            android:label="@string/title_activity_episode"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>